<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Name here"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/Controller_Name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="12sp"
        android:text="Author here"
        android:layout_below="@id/Controller_Name"
        android:id="@+id/Controller_Author"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/seekbar"
        android:layout_toLeftOf="@id/seekbar"
        android:id="@+id/songCurrentDurationLabel" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/seekbar"
        android:layout_toRightOf="@id/seekbar"
        android:id="@+id/songTotalDurationLabel" />
    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Controller_Author"
        android:layout_marginTop="10dp"
        android:id="@+id/seekbar"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pause_dark"
        android:layout_below="@id/seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/pause_dark"
        android:background="#FFFFFF"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_dark"
        android:layout_below="@id/seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/play_dark"
        android:background="#FFFFFF" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/previous_dark"
        android:layout_below="@id/seekbar"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:id="@+id/previous_dark"
        android:background="#FFFFFF"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next_dark"
        android:layout_below="@id/seekbar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="30dp"
        android:id="@+id/next_dark"
        android:background="#FFFFFF"/>


</RelativeLayout>